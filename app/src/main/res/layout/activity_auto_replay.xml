<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:paddingLeft="@dimen/fragment_horizontal_margin"
        android:paddingRight="@dimen/fragment_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_category_height"
        android:gravity="center_vertical"
        android:background="@drawable/custom_ripple"
        android:id="@+id/rl_replay_list">
        <TextView
            style="@style/TextBase"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/auto_replay_list"/>
        <View
            android:layout_alignParentBottom="true"
            android:background="@color/span_line"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </RelativeLayout>
    <RelativeLayout
        android:paddingLeft="@dimen/fragment_horizontal_margin"
        android:paddingRight="@dimen/fragment_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_category_height"
        android:gravity="center_vertical"
        android:background="@drawable/custom_ripple"
        android:id="@+id/rl_random_replay">
        <TextView
            style="@style/TextBase"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/random_replay"/>
        <android.support.v7.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:id="@+id/sw_random_replay" />
        <View
            android:layout_alignParentBottom="true"
            android:background="@color/span_line"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </RelativeLayout>
</LinearLayout>